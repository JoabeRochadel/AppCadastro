<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CadastrarClienteActivity">


    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_title"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_nome"
        android:layout_width="411dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Nome do cliente"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
        tools:ignore="VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/edit_endereco"
        android:layout_width="411dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="EndereÃ§o do cliente"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_nome" />

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="411dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Email do cliente"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_endereco" />

    <EditText
        android:id="@+id/edit_telefone"
        android:layout_width="411dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Telefone do cliente"
        android:importantForAutofill="no"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_email" />


    <EditText
        android:id="@+id/edit_sexo"
        android:layout_width="411dp"
        android:layout_height="47dp"
        android:hint="Sexo"
        app:layout_constraintTop_toBottomOf="@+id/edit_telefone"
        tools:ignore="SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btn_finalizar"
        android:layout_width="127dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorButton"
        android:text="Finalizar"
        app:layout_constraintEnd_toStartOf="@+id/btn_salvar"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toEndOf="@+id/btn_limpar"
        app:layout_constraintTop_toBottomOf="@+id/edit_sexo"
        tools:ignore="VisualLintButtonSize" />

    <Button
        android:id="@+id/btn_salvar"
        android:layout_width="126dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:background="@color/colorButton"
        android:text="@string/button_save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_sexo" />

    <Button
        android:id="@+id/btn_voltar"
        android:layout_width="122dp"
        android:layout_height="44dp"
        android:background="#EA1748"
        android:text="Voltar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_limpar"
        app:layout_constraintVertical_bias="0.024"
        tools:ignore="VisualLintButtonSize" />

    <Button
        android:id="@+id/btn_limpar"
        android:layout_width="121dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="#EA1748"
        android:importantForAutofill="no"
        android:text="@string/button_clean"
        app:layout_constraintEnd_toStartOf="@+id/btn_salvar"
        app:layout_constraintHorizontal_bias="0.118"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_sexo" />


</androidx.constraintlayout.widget.ConstraintLayout>